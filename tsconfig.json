{
  "compilerOptions": {
    "outDir": "./lib",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "strict": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "types": [
      "node"
    ],
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
  ]
}
